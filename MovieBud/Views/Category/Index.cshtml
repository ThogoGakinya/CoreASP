@{
    ViewData["Title"] = "Categories";
}
@model List<Category>

<div class="border container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1 class="text-primary">Categories</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
         <th>Actions
    </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary btn-xs mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                       </a>

                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-xs mx-2">
                                <i class="bi bi-trash"></i> Delete
                        </a>
                   </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
